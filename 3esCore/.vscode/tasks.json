{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build Debug",
      "command": "dotnet",
      "args": [
        "build",
        "-c", "Debug",
        "-property:GenerateFullPaths=true"
      ],
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build Release",
      "command": "dotnet",
      "args": [
        "build",
        "-c", "Release",
        "-property:GenerateFullPaths=true"
      ],
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish Debug",
      "command": "dotnet",
      "windows": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "Debug",
          "-o ${workspaceFolder}\\build\\Debug",
          "-property:GenerateFullPaths=true",
          "-r", "win10-x64"
        ]
      },
      "linux": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "Debug",
          "-o ${workspaceFolder}/build/Debug",
          "-property:GenerateFullPaths=true",
          "-r", "linux-x64"
        ]
      },
      "osx": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "Debug",
          "-o ${workspaceFolder}/build/Debug",
          "-property:GenerateFullPaths=true",
          "-r", "osx-x64"
        ]
      },
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish Release",
      "command": "dotnet",
      "windows": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "Release",
          "-o ${workspaceFolder}\\build\\Release",
          "-property:GenerateFullPaths=true",
          "-r", "win10-x64"
        ]
      },
      "linux": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "Release",
          "-o ${workspaceFolder}/build/Release",
          "-property:GenerateFullPaths=true",
          "-r", "linux-x64"
        ]
      },
      "osx": {
        "args": [
          "publish",
          "-f", "netcoreapp2.2",
          "-c", "Release",
          "-o ${workspaceFolder}/build/Release",
          "-property:GenerateFullPaths=true",
          "-r", "osx-x64"
        ]
      },
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "marshal Debug",
      "dependsOn": "build Debug",
      "command": "python unity-marshal.py -c Debug",
      "type": "shell",
      "group": "none",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "marshal Release",
      "dependsOn": "build Release",
      "command": "python unity-marshal.py -c Release",
      "type": "shell",
      "group": "none",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
